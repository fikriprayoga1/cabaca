<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.SplashScreenFragment">

    <!--1-->
    <ImageView
        android:id="@+id/imageView_splash_screen_fragment_1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/a2"
        app:layout_constraintBottom_toTopOf="@+id/textView_splash_screen_fragment_2"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

    <!--2-->
    <TextView
        android:id="@+id/textView_splash_screen_fragment_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/a1"
        android:textColor="@color/primary_text"
        android:textSize="12pt"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>